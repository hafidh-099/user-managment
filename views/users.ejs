<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user</title>
</head>
<body>
  <%- include('./partials/dashboard.ejs'),{sessiondata} %>
     <h2>All Users</h2>
  <table border="1">
    <tr><th>ID</th><th>Username</th><th>Role</th><th>Actions</th></tr>
    <% users.forEach((user) => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td>
          <% if(sessiondata.user==='true'){%>
            <a href="/users/edit/<%= user.id %>">Edit</a> |
            <a href="/users/delete/<%= user.id %>" onclick="return confirm('Are you sure?')">Delete</a>
         <% } %>
        </td>
      </tr>
    <% }) %>
  </table>
  <%- include('./partials/footer.ejs') %>
</body>
</html>